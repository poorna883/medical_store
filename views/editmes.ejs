<% include ./partials/header%>
<div class="container" style="padding-top:80px;">
<div class="row">
<h1 style="text-align:center; color:black; font-weight:600">Edit Medicine Details <%= Medicine.name %></h1>
<div style="width:30% ;margin:25px auto">
<form action="/medicines/<%= Medicine._id %>?_method=PUT" method="POST">
<div class="form-group"><input class="form-control" type="text"
name="Medicine[name]" id="medname" value="<%= Medicine.name %>" required></div>
<div class="form-group"><input class="form-control" type="text"
name="Medicine[batchno]" id="batchno" value="<%= Medicine.batchno %>" required></div>
<div class="form-group"><input class="form-control" type="text"
name="Medicine[mfd]" id="mfd" value="<%= Medicine.mfd %>" required></div>
<div class="form-group">
    <input type="text" name="Medicine[exp]" class="form-control" id="exp" value="<%= Medicine.exp %>"required>
  </div>
<div class="form-group">
    <input type="text" name="Medicine[price]" class="form-control" id="price"  value="<%= Medicine.price %>" title="please enter a valid price" required>
  </div>
<div style="width:25% ;margin:25px auto">
<div class="form-group"><button class="btn btn-lg btn-primary btn-block">Edit</button></div> 
</div>
</form>
<a href="/adminlanding">Go Back</a>
 <% include ./partials/footer%>